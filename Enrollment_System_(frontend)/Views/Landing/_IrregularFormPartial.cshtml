<!-- Section Header -->
<div class="d-flex w-100 rounded-2 p-2" style="background-color: #066B99;">
    <img src="~/images/student-icon-white.svg" alt="Student Icon" width="30" />
    <h4 class="text-white">Irregular</h4>
</div>

<div class="d-flex gap-4">
    <!-- LEFT SIDE: FORM -->
    <div class="mt-3" style="width: 60%;">

        <!-- Basic Information -->
        <h4>Basic Information</h4>
        <p>Please provide your correct information. This will be used for your enrollment.</p>
        <hr />

        <!-- Personal Details -->
        <strong>Personal Details</strong>
        <div class="d-flex w-100 gap-2 mt-1 mb-2">
            <div>
                <p>Last Name</p>
                <input class="rounded-2 p-1 w-100" type="text" name="LastName" />
            </div>
            <div>
                <p>First Name</p>
                <input class="rounded-2 p-1 w-100" type="text" name="FirstName" />
            </div>
            <div>
                <p>Middle Name</p>
                <input class="rounded-2 p-1 w-100" type="text" name="MiddleName" />
                <small class="text-secondary">Leave blank if none.</small>
            </div>
            <div>
                <p>Extension</p>
                <input class="rounded-2 p-1 w-100" type="text" name="Extension" />
                <small class="text-secondary">Leave blank if none.</small>
            </div>
        </div>

        <!-- Contact Info -->
        <div class="d-flex justify-content-start gap-5 w-100 mt-1 mb-3">
            <div>
                <p>Sex</p>
                <select class="p-1 rounded-1" style="width: 150px;">
                    <option></option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>
            <div>
                <p>Contact Number</p>
                <input class="rounded-2 p-1 w-100" type="text" name="ContactNumber" />
            </div>
            <div>
                <p>Email Address</p>
                <input class="rounded-2 p-1 w-100" type="email" name="Email" />
            </div>
        </div>

        <!-- Address -->
        <strong>Address</strong>
        <div class="d-flex w-100 gap-2 mt-1 mb-3">
            <input class="rounded-2 p-1 w-100" type="text" name="HouseNo" placeholder="House No" />
            <input class="rounded-2 p-1 w-100" type="text" name="Street" placeholder="Street" />
            <input class="rounded-2 p-1 w-100" type="text" name="Barangay" placeholder="Barangay" />
            <input class="rounded-2 p-1 w-100" type="text" name="City" placeholder="City" />
            <input class="rounded-2 p-1 w-100" type="text" name="PostalCode" placeholder="Postal Code" />
        </div>

        <!-- Academic Information -->
        <strong>Academic Information</strong>
        <div class="d-flex w-100 gap-2 mt-1 mb-5">
            <div>
                <p>Program</p>
                <select class="p-1 rounded-1 w-100 gap-3" name="Program">
                    <option>---Select Program---</option>
                    <option>Bachelor of Science in Information and Technology</option>
                    <option>Bachelor of Early Childhood Education</option>
                    <option>Bachelor of Science in Entrepreneurship</option>
                </select>
            </div>
            <div>
                <p>Year Level</p>
                <input class="rounded-2 p-1 w-100 gap-3" type="type" name="name" value="" />
            </div>
            <div>
                <p>Semester</p>
                <input class="rounded-2 p-1 w-100 gap-3" type="type" name="name" value="" />
            </div>
        </div>

        <!-- Parent/Guardian Information -->
        <h4>Parent/Guardian Information</h4>
        <p>Please provide your correct information. This will be used for your enrollment.</p>
        <hr />

        <!-- Parent Details -->
        <strong>Personal Details</strong>
        <div class="d-flex w-100 gap-2 mt-1 mb-2">
            <input class="rounded-2 p-1 w-100" type="text" name="ParentLastName" placeholder="Last Name" />
            <input class="rounded-2 p-1 w-100" type="text" name="ParentFirstName" placeholder="First Name" />
            <input class="rounded-2 p-1 w-100" type="text" name="ParentMiddleName" placeholder="Middle Name" />
            <input class="rounded-2 p-1 w-100" type="text" name="ParentExtension" placeholder="Extension" />
        </div>

        <!-- Contact Details -->
        <strong>Contact Details</strong>
        <div class="d-flex w-100 gap-2 mt-1 mb-3">
            <input class="rounded-2 p-1 w-100" type="text" name="ParentContactNumber" placeholder="Contact Number" />
            <input class="rounded-2 p-1 w-100" type="text" name="Relationship" placeholder="Relationship" />
        </div>

        <!-- Parent Address -->
        <strong>Address</strong>
        <div class="d-flex w-100 gap-2 mt-1 mb-5">
            <input class="rounded-2 p-1 w-100" type="text" name="ParentHouseNo" placeholder="House No" />
            <input class="rounded-2 p-1 w-100" type="text" name="ParentStreet" placeholder="Street" />
            <input class="rounded-2 p-1 w-100" type="text" name="ParentBarangay" placeholder="Barangay" />
            <input class="rounded-2 p-1 w-100" type="text" name="ParentCity" placeholder="City" />
            <input class="rounded-2 p-1 w-100" type="text" name="ParentPostalCode" placeholder="Postal Code" />
        </div>

        <!-- Footer Note -->
        <p class="pt-5 text-secondary mb-3">
            After completing and submitting the application, wait for your application to be verified.
            The university will send you an email.
        </p>

        <!-- Action Buttons -->
        <div class="d-flex gap-5">
            <a data-bs-toggle="modal" data-bs-target="#CancelModal" class="btn w-25 white-btn">Cancel</a>
            <a class="btn w-50 text-white" style="background-color: #066B99;">Proceed to Schedules and Courses</a>
        </div>

    </div>

    <!-- RIGHT SIDE: REQUIRED DOCUMENTS -->
    <div class="mt-3" style="width: 40%;">
        <h4>Required Documents</h4>
        <p>Please submit the following requirements:</p>
        <hr />

        <div class="d-flex flex-column gap-3">
            <!-- First Row -->
            <div class="d-flex justify-content-around ">
                <!-- Form 138 -->
                <button type="button" class="requirement-card w-25 text-center p-2 border-0 bg-white"
                        data-bs-toggle="modal" data-bs-target="#UploadModal">
                    <div class="d-flex flex-column gap-2 align-items-center justify-content-center">
                        <img src="~/images/file-up.svg" alt="Form 138" width="80" />
                        <strong>Form 138</strong>
                    </div>
                </button>

                <!-- Good Moral Certificate -->
                <button type="button"
                        class="requirement-card w-25 text-center p-2 border-0 bg-white"
                        data-bs-toggle="modal"
                        data-bs-target="#UploadModal"
                        data-title="Upload Good Moral Certificate">
                    <div class="d-flex flex-column gap-2 align-items-center justify-content-center">
                        <img src="~/images/file-up.svg" alt="Good Moral Certificate" width="80" />
                        <strong>Good Moral Certificate</strong>
                    </div>
                </button>

                <!-- Medical Certificate -->
                <button type="button"
                        class="requirement-card w-25 text-center p-2 border-0 bg-white"
                        data-bs-toggle="modal"
                        data-bs-target="#UploadModal"
                        data-title="Upload Medical Certificate">
                    <div class="d-flex flex-column gap-2 align-items-center justify-content-center">
                        <img src="~/images/file-up.svg" alt="Medical Certificate" width="80" />
                        <strong>Medical Certificate</strong>
                    </div>
                </button>
            </div>

            <!-- Second Row -->
            <div class="d-flex justify-content-around">
                <!-- Diploma -->
                <button type="button"
                        class="requirement-card w-25 text-center p-2 border-0 bg-white"
                        data-bs-toggle="modal"
                        data-bs-target="#UploadModal"
                        data-title="Upload Diploma">
                    <div class="d-flex flex-column gap-2 align-items-center justify-content-center">
                        <img src="~/images/file-up.svg" alt="Diploma" width="80" />
                        <strong>Diploma</strong>
                    </div>
                </button>

                <!-- Certificate of Indigency -->
                <button type="button"
                        class="requirement-card w-25 text-center p-2 border-0 bg-white"
                        data-bs-toggle="modal"
                        data-bs-target="#UploadModal"
                        data-title="Upload Certificate of Indigency">
                    <div class="d-flex flex-column gap-2 align-items-center justify-content-center">
                        <img src="~/images/file-up.svg" alt="Certificate of Indigency" width="80" />
                        <strong>Certificate of Indigency</strong>
                    </div>
                </button>

                <!-- PSA Birth Certificate -->
                <button type="button"
                        class="requirement-card w-25 text-center p-2 border-0 bg-white"
                        data-bs-toggle="modal"
                        data-bs-target="#UploadModal"
                        data-title="Upload PSA Birth Certificate">
                    <div class="d-flex flex-column gap-2 align-items-center justify-content-center">
                        <img src="~/images/file-up.svg" alt="PSA Birth Certificate" width="80" />
                        <strong>PSA Birth Certificate</strong>
                    </div>
                </button>
            </div>
        </div>
    </div>
    <!-- END RIGHT SIDE -->
    @* UPLOAD MODAL *@
    <div class="modal fade" id="UploadModal" tabindex="-1" aria-labelledby="uploadModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header p-3 ">
                    <img src="~/images//file-up.svg" alt="Alternate Text" width="30" class="me-2" />
                    <h5 class="modal-title" id="uploadModalLabel">Upload a document</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body py-4 px-5">
                    <p class="mb-3">Choose a file to upload and attach it to your application.</p>

                    <form asp-controller="Upload" asp-action="SaveFile" method="post" enctype="multipart/form-data">
                        <div id="drop-area" class="border border-primary rounded-4 d-flex flex-column justify-content-center align-items-center p-3 bg-light text-center">
                            <i class="bi bi-upload" style="font-size: 2rem;"></i>
                            <div class="d-flex flex-column gap-3 align-items-center">
                                <img src="~/images/upload.svg" alt="Alternate Text" width="50" />
                                <p class="mt-2">Drag and drop files here</p>
                                <p>or</p>
                                <input type="file" id="fileInput" name="file" hidden />
                                <button type="button" class="btn btn-primary" onclick="document.getElementById('fileInput').click()">Upload a document</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

    @* CANCEL MODAL *@
    <div class="modal fade" id="CancelModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header d-flex gap-3 justify-content-center p-3">
                    <img src="~/images/triangle-alert.svg" alt="Alternate Text" width="50" />
                    <h3>Notification</h3>
                </div>
                <div class="modal-body p-4 d-flex flex-column align-items-center">
                    <p>Are you sure you want to cancel your application?</p>
                    <p>All data will be deleted.</p>
                </div>
                <div class="modal-footer p-3 d-flex justify-content-center">
                    <a data-bs-dismiss="modal" class="btn white-btn" style="width: 45%;">Keep it</a>
                    <a href="@Url.Action("EnrollmentLandingPage", "Landing")" class="btn btn-danger" style="width: 45%;">Leave</a>
                </div>
            </div>
        </div>
    </div>

</div>